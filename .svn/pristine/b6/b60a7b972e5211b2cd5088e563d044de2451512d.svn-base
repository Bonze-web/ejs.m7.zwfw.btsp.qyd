html,
body,
.mui-content {
	background: #FFFFFF;
}

.mui-bar {
	display: flex;
	align-items: center;
	padding-top: 20px;
	width: 100%;
	height: 64px;
	box-shadow: none;
	background: #FFFFFF;
}

.em-header-scroll {
	background-color: #FFF;
	top: 0;
	margin: 0 10px;
	text-align: center;
	overflow-x: auto;
	width: calc(100vw - 88px);
	white-space: nowrap;
	font-size: 0;
	/*解决子元素间隙问题*/
	height: 44px;
	-webkit-overflow-scrolling: touch;
}

.em-header-scroll::-webkit-scrollbar {
	display: none;
}

.em-header-scroll-item {
	position: relative;
	color: #333;
	font-size: 17px;
	margin: 0 10px;
	line-height: 44px;
	display: inline-block;
	  
}

.em-active {
	color: #3C80E6;
	line-height: 35px;
}

.em-title {
	font-size: 17px;
	color: #333333;
}

.em-date {
	display: block;
	font-size: 15px;
	color: #666666;
	text-align: right;
}

#minirefresh {
	top: 64px;
}
