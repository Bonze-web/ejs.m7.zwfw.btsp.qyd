body,html {
    background-color: #f5f5f5;
}
.calendar-month {
    padding-left: 10px;
    display: flex;
    align-items: center;
    height: 50px;
    background-color: #f5f5f5;
    font-size: 14px;
}
.calendar-month input {
    margin-right: 4px;
    width: 21px;
    height: 21px;
}
.calendar-day {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
}
.calendar-day > div {
    border-right: 1px solid #e6e6e6;
    border-bottom: 1px solid #e6e6e6;
    padding: 10px;
    width: 25%;
    height: 70px;
    font-size: 14px;
}
.calendar-day input {
    width: 18px;
    height: 18px;
}

.calendar-choose {
    position: fixed;
    padding: 0 10px;
    bottom: 0;
    width: 100%;
    height: 44px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-top: 1px solid #e6e6e6;
}
.calendar-choose-tips {
    font-size: 14px;
}
.calendar-choose-tips span:nth-child(1) {
    color: #999;
}
.calendar-choose-tips span:nth-child(2) {
    color: #3c80e6;
}
.calendar-choose-rest {
    background-color: #3c80e6;
    color: #fff;
    border: none;
}
.calendar-choose-work {
    background-color: #c4d3ea;
    color: #fff;
    border: none;
}