html,
body,
.mui-content {
	background: #FFFFFF;
}

.mui-table-view-cell.remove-mui-active.mui-active {
	background: #FFFFFF;
}


/*
 * tab切换
 */

.em-tab-list {
	position: fixed;
	top: 0;
	width: 100%;
	height: 40px;
	font-size: 15px;
	line-height: 40px;
	text-align: center;
	background-color: #fff;
	color: #333;
	z-index: 10;
}

.em-tab-list li {
	float: left;
	width: 50%;
	border-bottom: 2px solid transparent;
}

.em-num {
	color: #999;
}

.em-tab-list li.em-active {
	color: #3C80E6;
	border-bottom: 2px solid #3c80e6;
}

.em-tab-list li.em-active .em-num {
	color: #3C80E6;
}

.em-tab-list li:after {
	position: absolute;
	right: 0;
	bottom: 0;
	top: 0;
	left: 0;
	margin: auto;
	height: 25px;
	width: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #e5e5e5;
}

#minirefresh {
	margin-top: 42px;
}


/*列表内容*/

.flex {
	position: relative;
	display: flex;
	align-items: center;
}

#listdata li {
	padding: 20px 15px 12px 15px;
}

.em-title {
	width: calc(100% - 27px);
	font-size: 17px;
	color: #000000;
}

.mui-navigate-right:after,
.mui-push-right:after {
	font-size: 18px;
}

.em-conbox {
	position: relative;
	margin: 15px 0;
	border-left: 2px solid #cedbef;
}

.em-con {
	display: flex;
	margin-left: 10px;
	font-size: 14px;
	line-height: 26px;
	color: #8c8c8c;
}

.em-con>span {
	width: 100px;
}

.em-con-hide {
	width: 140px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.color-blue {
	color: #3c80e6;
}

.em-bgrade {
	color: #d52323;
}

.em-bgradeicon {
	width: 15px;
	height: 15px;
}

.em-add {
	padding: 10px 0;
	margin-bottom: 10px;
	background: #ecf4ff;
	color: #3C80E6;
	text-align: center;
	border-radius: 4px;
}

.em-add:active {
	background: #eeeeff;
}

.em-addicon {
	width: 12px;
	height: 12px;
}

.em-reforminfo {
	margin: 5px 0;
	padding: 15px;
	border: 1px solid #efc0c0;
	border-radius: 4px;
	background: #fff8f7;
}

.em-detail:active {
	background: #eee;
}