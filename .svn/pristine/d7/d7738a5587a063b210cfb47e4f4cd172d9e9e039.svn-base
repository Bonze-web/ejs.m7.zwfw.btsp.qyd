* {
  padding: 0;
  margin: 0;
}

/* 颜色标准蓝色#5D99E9 */
.color-blue {
  color: #5d99e9;
}

/* 通用搜索栏 */
.em-srhbar {
  position: relative;
  height: 44px;
  padding: 7px 10px;
  background-color: #fff;
}

.em-srhbar .em-srhbar-input {
  width: 100%;
  height: 30px;
  margin-bottom: 0;
  padding: 0 0 0 36px;
  font-size: 1rem;
  border-radius: 15px;
  background-color: #eaeaea;
  border: none;
  text-align: left !important;
}

.em-srhbar .em-srhbar-input::placeholder {
  text-align: left !important;
}

.em-srhbar .em-srhbar-icon {
  position: absolute;
  top: 10px;
  left: 18px;
}

/* 按钮样式 */
/* 列表页面新增按钮 */
.btn-add {
  position: fixed;
  bottom: 20vh;
  right: 20px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  opacity: 0.9;
  border: none;
  background: url(./images/img_add.png) 0 0 /100% 100%;
  z-index: 20;
}

/* 详情页面进入编辑按钮 */
.btn-edit {
  position: fixed;
  bottom: 50vh;
  right: 20px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  opacity: 0.9;
  border: none;
  background-color: #fff;
  background: url(./images/img_edit.png) 0 0 /100% 100%;
  z-index: 20;
}

/* tab切换样式 */
.tab-list {
  display: flex;
  background: #fff;
  height: 40px;
  line-height: 40px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.tab-active span {
  color: #5d99e9;
  position: relative;
  display: inline-block;
}

.tab-active span::after {
  position: absolute;
  height: 2px;
  bottom: 0px;
  right: 0;
  left: 0;
  background: #5d99e9;
  content: "";
}

/* 子选项tab */
.sub-tab-container {
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.sub-tab-list {
  padding: 0 15px 0 15px;
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
  height: 44px;
  font-size: 13px;
  align-items: center;
  overflow-x: scroll;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

::-webkit-scrollbar {
  display: none;
  /* Chrome Safari */
}

.sub-tab-item {
  display: inline-block;
  padding: 0 15px;
  height: 30px;
  line-height: 30px;
  color: #7a96be;
  background: #f5f7fb;
  text-align: center;
  border-radius: 15px;
}

.sub-tab-item+.sub-tab-item {
  margin-left: 4%;
}

.sub-tab-active {
  color: #fff;
  background: #3c80e6;
}

/* 表单详情样式 */
.detail-list {
  background: #fff;
}

.detail-item {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 15px;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
}

.item-left {
  width: 110px;
  padding: 7px 10px;
}

.item-right {
  flex: 3;
  min-height: 40px;
  padding: 10px;
}

/* 表单详情定位样式 */
.locationitem {
  position: relative;
}

.locationitem .item-right {
  margin-right: 50px;
}

.locationitem img {
  position: absolute;
  width: 22px;
  height: 22px;
  right: 15px;
  top: calc(50% - 11px);
}

/* 表单附件样式 */
.detail-img-item {
  display: flex;
}

.item-img-left {
  padding: 7px 10px;
}

.item-img-right {
  text-align: right;
  flex: 3;
  padding: 10px 20px 10px 10px;
}

.detail-attach-list {
  display: flex;
  padding: 10px;
  flex-wrap: wrap;
  align-items: center;
}

.detail-attach-item {
  width: 28%;
  height: auto;
}

.detail-attach-item:nth-child(3n + 2) {
  margin: 0 8%;
}

.detail-attach-item img {
  width: 100%;
}

/* 表单提交页面普通样式 */
.form-list {
  padding: 0 0 0 15px;
  background-color: #fff;
}

.form-item {
  display: flex;
  flex-wrap: wrap;
  padding: 5px 0;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.form-item label {
  width: 35%;
  padding-right: 20px;
  font-size: 15px;
}

.form-item input,
textarea {
  flex: 1;
  padding: 0 10px 0 0;
  margin: 0;
  border: none;
  font-size: 15px;
}

.form-item input {
  height: 30px !important;
}

.arrow-right {
  position: relative;
}

.arrow-right input {
  padding-right: 30px;
}

.arrow-right::after {
  position: absolute;
  height: 20px;
  right: 10px;
  top: calc(50% - 10px);
  font-family: Muiicons;
  content: "\e583";
}

.common-mustfill {
  color: red;
}

/* 附件个数 */
.form-filecount div {
  flex: 1;
  padding: 0 20px 0 0;
  line-height: 40px;
  text-align: right;
  color: #9d9d9d;
}

/* 附件上传样式 */
.form-file-list {
  display: flex;
  padding: 15px;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
}

.form-file-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28%;
  min-height: 100px;
  height: auto;
}

.form-file-item:nth-child(3n + 2) {
  margin: 0 8%;
}

.form-file-item img {
  width: 100%;
  height: auto;
}

/* 附件添加按钮 */
.form-file-add {
  height: 100px;
  border: 1px solid #e5e5e5;
  background-color: #ededed;
}

.form-file-add img {
  width: auto;
  height: auto;
}

.form-file-add input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

/* 删除图标 */
.icon-delete {
  position: absolute;
  right: -5px;
  top: -5px;
  width: 20px;
  height: 20px;
  background: url(./images/img_delete.png) 0 0 /100% 100%;
}

/* 提交页面按钮颜色 */
.btn-content {
  display: flex;
}

.btn-content button {
  flex: 1;
  height: 40px;
  margin: 10px 0 0 0;
  padding: 0;
  border: none;
  font-size: 16px;
  border-radius: 0;
}

/* 白色 */
.btn-white {
  color: #3c80e6;
  background: #fff;
}

/* 深蓝 */
.btn-darkblue {
  color: #fff;
  background: #3c80e6;
}

/* 浅蓝 */
.btn-lightblue {
  color: #fff;
  background: #64a2ff;
}