(function (d, $) {
    'use strict';

    var token = Config.token,
        type = '0', // 待分配0 已分配1
        minirefreshObj = null; // 下拉刷新实例

    var status = Util.getExtraDataByKey('status') || '';
    status = decodeURI(status);

    Util.loadJs(
        // 下拉刷新
        'js/widgets/tabview/tabview.js',
        function () {
            ejs.config({
                jsApiList: []
            });

            ejs.ready(function () {
                initPage()
            });
        }
    );

    // 初始化页面信息
    function initPage() {
        //设置头部状态和底部按钮
        $('.detail-status').text(status);
        $('#statusbtn').text(status.split('待')[1]);

        // 初始化事件监听
        initListeners();

        new TabView({
            container: "#em-tabview-con",
            activeCls: "cur",
            isSwipe: false,
            activeIndex: 0,
            triggerEvent: 'tap',
            itemClick: function (e) { }
        });
    }

    /**
     * 初始化事件监听
     */
    function initListeners() {

    }

})(document, Zepto);