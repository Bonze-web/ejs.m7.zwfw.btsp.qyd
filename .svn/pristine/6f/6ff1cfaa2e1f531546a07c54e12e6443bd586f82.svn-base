html,
body {
  background: #fff;
}

.main-ul-items {
  margin-bottom: 55px;
}

.main-li-item {
  display: flex;
  padding: 0 0 0 10px;
  font-size: 15px;
  border-bottom: 1px solid #e5e5e5;
}

.item-name {
  position: relative;
  z-index: 1;
  float: left;
  display: inline-block;
  width: 80px;
  color: #666;
  overflow: hidden;
  text-align: justify;
  text-align-last: justify;
  padding: 10px 18px 10px 0;
  padding-right: 18px;
}

/*.item-name::after {
	position: absolute;
	z-index: 1;
	display: inline-block;
	content: ':';
	width: 100%;
	color: #666;
	font-size: 18px;
	overflow: hidden;
}*/

.icon-important::after {
  position: absolute;
  z-index: 1;
  content: '*';
  top: 12px;
  right: 6px;
  color: red;
  font-size: 18px;
}

.item-info {
  position: relative;
  z-index: 1;
  float: right;
  width: calc(100% - 80px);
}

input {
  width: 100%;
  color: #333;
  font-size: 15px;
  padding: 11px 20px 11px 8px;
  border: none;
  outline: none;
}

input::-webkit-input-placeholder {
  color: #666;
  font-size: 15px;
}

.mui-navigate-right:after,
.mui-push-right:after {
  right: 5px;
  color: #666;
  font-size: 18px;
}

.input-money {
  width: calc(100% - 35px);
}

.li-item-choose,
.li-item-checkboxs {
  padding: 0;
  margin-left: 10px;
}

/*复选框样式*/

.li-item-checkboxs {
  display: flex;
  padding: 10px 0 8px 0;
  color: #333;
}

.li-item-checkboxs:last-child {
  margin-left: 0;
  padding: 10px 0 8px 10px;
}

.check-text {
  margin: 0 auto;
  width: calc(100% - 50px);
}

.check-content {
  display: inline-block;
  width: 50px;
  margin: auto 0;
  text-align: center;
}

.check {
  display: inline-block;
  width: 22px;
  height: 22px;
  margin: auto 0;
  border: 1px solid #333;
  border-radius: 3px;
  overflow: hidden;
  background: #fff;
}

.check-active {
  background: #fff url(./img/img_icon_check.png) no-repeat;
  background-size: cover;
  border: 1px solid #4285f4;
}

/*保存按钮*/

.footer {
  position: fixed;
  height: 44px;
  width: 100%;
  z-index: 3;
  bottom: 0;
}

.btn-save {
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 16px;
  background: #4285f4;
  border: none;
  border-radius: 0;
}

textarea {
  width: calc(100% - 10px);
  padding-left: 0;
  color: #333;
  font-size: 16px;
  border: none;
}

textarea::-webkit-input-placeholder {
  color: #999;
  font-size: 16px;
}

.btm-none {
  border-bottom: none;
}

.flex-row {
  position: relative;
  display: flex;
  justify-content: start;
}

.fs-15 {
  font-size: 15px;
}

textarea::-webkit-input-placeholder {
  color: #666;
  font-size: 15px;
}

.mui-navigate-right2:after {
  content: '\e583';
}

.mui-navigate-right2:after {
  font-family: Muiicons;
  line-height: 1;
  position: absolute;
  top: 25%;
  display: inline-block;
  transform: translateY(-50%);
  text-decoration: none;
  text-decoration-line: none;
  text-decoration-style: initial;
  text-decoration-color: initial;
  -webkit-font-smoothing: antialiased;
}
.mui-navigate-right2:after {
  right: 5px;
  color: #666;
  font-size: 18px;
}

.my-textarea {
  padding-left: 8px;

  font-size: 15px;
}
