html,
body,
.mui-content {
	position: relative;
	background-color: #F5F5F5;
	height: 100%;
}
.mb15{
	margin-bottom: 15px!important;
}
.haschoose{
	float: right;
	width: calc(100% - 85px);
}
.title{
	height: 40px;
	line-height: 40px;
	padding-left: 15px;
	margin: 15px 15px -15px 15px;
	background-color: #fff;
	border-bottom: 1px solid rgba(200, 199, 204, 0.5);
}
/*签到地点*/
.fixed {
	position: fixed;
	top: 0;
	z-index: 10;
	width: 100%;
}

.flex {
	display: flex;
	align-items: center;
}

.flexs {
	/*display: flex;
	align-items: flex-start;*/
}

.flexc {
	display: flex;
	align-items: flex-start;
	justify-content: center;
}

.em-sign {
	padding: 24px 19px;
	background: #FFFFFF;
}

.em-time {
	width: 55px;
	text-align: center;
}

.em-date {
	display: block;
	font-size: 16px;
	color: #333333;
}

.em-week {
	font-size: 12px;
	color: #999;
}

.em-circle {
	position: relative;
	margin-left: 21px;
	margin-right: 25px;
	width: 11px;
	height: 11px;
	border-radius: 50%;
	background: #aeceff;
}

.em-circle:after {
	position: absolute;
	right: 0;
	bottom: 0;
	top: 0;
	left: 0;
	margin: auto;
	height: 71px;
	width: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #aeceff;
}

.em-signaddress {
	width: calc(100% - 80px);
	color: #666666;
	font-size: 16px;
}


/*地点*/
.em-addressinfo {
	position: relative;
	margin: 15px;
	height: 93px;
	overflow: hidden;
	border-radius: 4px;
	transition: height 0.3s linear;
}

.em-addressul {	
	border-radius: 4px;
}

.em-refreshicon {
	position: absolute;
	right: 16px;
	top: 27px;
	z-index: 11;
	width: 18px;
	height: 18px;
}

.em-addressicon {
	display: block;
	float: left;
	width: 12px;
	height: 20px;
}

.em-downarrowicon {
	width: 12px;
	height: 7px;
}

.em-siteinfo {
	/*margin-left: 15px;*/
	float: right;
	width: calc(100% - 15px);
}

.em-site {
	display: block;
	font-size: 17px;
	color: #333333;
}

.em-sitedetail {
	display: block;
	font-size: 14px;
	color: #999;
}

/*地图*/

.em-map {
	width: 100%;
	height: 100%;
	/*background: #e4393c;*/
	border-top: 1px solid #E6E6E6;
}


/*格式化列表*/

.mui-table-view:before {
	height: 0;
}

.mui-table-view-cell {
	padding-left: 11px 15px;
}

.mui-table-view-cell .em-left {
	width: 90%;
	float: left;
}

.mui-table-view-cell .em-right {
	width: 10%;
	display: inline-flex;
	align-items: center;
	justify-content:flex-end;
	height: 60px;
}

.mui-table-view-cell .em-left img {
	width: 12px;
	height: 20px;
	float: left;
}

.mui-table-view-cell p {
	font-size: 17px;
	color: #333333;
	padding-left: 25px;
	margin-bottom: 3px;
	width: 93%;
}

/*.mui-table-view-cell span {
	float: left;
	margin-left: 25px;
	color: #999999;
	font-size: 14px;
	width: 93%;
}*/
.mui-table-view-cell .em-right .em-righticon {
	display: block;
	width: 20px;
	height: 20px;
	visibility: hidden;
}

.em-righticon-active.mui-table-view-cell .em-right .em-righticon {
	visibility: visible;

}
.em-wifi{
	display: none;
	width: 100%;
    text-align: center;
    z-index: 99;
    position: relative;
}
/*没信号*/
.em-nowifi{
	width: 215px;
	height: 110px;
}
/*重定位*/
.em-reposition{
	width: 100%;
	height: 50px;
	background-color: #FFFFFF;
	border-top: 1px solid #D1D0D1;
	position: fixed;
	bottom: 0;
	display: flex;
	align-items:center;
	justify-content: center;
}
.em-reposition img{
	width: 18px;
	margin-right: 14px;
}
.em-reposition span{
	color:#3C80E6;
	font-size: 17px;
}

/*滚动条*/
.mui-scroll-wrapper{
	margin-top: 161px;
	margin-bottom: 55px;
}

[data-ripple="ripple"] {
    position: fixed;
    overflow: hidden;
    -webkit-user-select: none;
    -moz-webkit-user-select:none;
    -ms-user-select:none;
}

.em-button {
	position: fixed;
	bottom: 38px;
	width: 100px;
	height: 100px;
	background-color: #3C80E6;
	border-radius: 50%;
	border: 3px solid #7FABEF;
	margin-left: calc((100% - 100px)/2);
	text-align: center;
	z-index: 9;
}

.em-button img {
	width: 33px;
	margin-top: 15px;
}

.em-button p {
	color: #fff;
	font-size: 17px;
}