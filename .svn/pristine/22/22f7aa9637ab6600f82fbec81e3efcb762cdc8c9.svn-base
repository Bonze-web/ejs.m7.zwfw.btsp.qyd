.mui-content>.em-todo-table-view.mui-table-view:first-child {
	margin-top: 0;
}

/*列表*/

.em-todo-table-view .mui-table-view-cell {
	padding: 10px;
}

.em-todo-table-view .mui-table-view-cell.mui-active {
	/*background-color: #fff;*/
}

.em-todo-table-view .mui-table-view-cell:after {
	left: 10px;
}

.em-todo-table-view .mui-table-view-cell div {
	display: flex;
	justify-content: space-between;
}

.em-todo-top-title {
	margin-bottom: 5px;
}

.em-todo-title {
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	text-overflow: ellipsis;
	overflow: hidden;
	width: 75%;
	font-size: 16px;
	color: #333333;
}

.em-todo-title-only {
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	text-overflow: ellipsis;
	overflow: hidden;
	width: 100%;
	font-size: 16px;
	color: #333333;
}

.em-todo-procedure {
	font-size: 14px;
	color: #ff0000;
}

.em-todo-reason {
	font-size: 14px;
	color: #666666;
}

.em-todo-reason-detail {
	color: #333333;
}

.em-todo-proposer,
.em-todo-next {
	font-size: 14px;
	color: #3c80e6;
}

.em-todo-time {
	font-size: 12px;
	color: #999999;
}


/*遮罩*/

.em-mask {
	display: none;
	z-index: 20;
	margin-top: 0px;
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: #000;
	opacity: 0.3;
}


/*自定义纵向顶部菜单并设置动画*/

.em-transition-vertical {
	overflow: hidden;
	height: 0px;
	/*background: #3c80e6;*/
	transition: height 100ms linear;
	-webkit-transition-duration: height 100ms linear;
	-moz-transition: height 100ms linear;
	-o-transition-property: height 100ms linear;
}


/*筛选*/

.em-todo-matter-wrapper {
	position: fixed;
	top: 0px;
	padding: 0px 0;
	width: 100%;
	background-color: #fff;
	z-index: 999;
}

.em-todo-matter-wrapper-item {
	margin: 10px 0;
	height: 168px;
}

.mui-scroll-wrapper {
	z-index: 0;
	margin-top: 44px;
	margin-bottom: 44px;
}

.em-todo-matter-wrapper p {
	margin: 10px 0 10px 10px;
	font-size: 15px;
	color: #666666;
}

.em-todo-row {
	padding: 0 10px;
}

.em-todo-col-4 {
	position: relative;
	margin-right: 5%;
	margin: 0 5% 15px 0;
	border-radius: 4px;
	width: 30%;
	height: 34px;
	line-height: 34px;
	font-size: 15px;
	color: #333333;
	text-align: center;
	background-color: #f5f5f5;
}

.em-todo-col-4:nth-child(3n+0) {
	margin-right: 0;
}

.em-todo-active {
	border: 1px solid #ff0000;
	border-radius: 4px;
	color: #ff0000;
	background-color: #FFFFFF;
}

.em-todo-active:after {
	position: absolute;
	bottom: 0;
	right: 0;
	width: 0;
	height: 0;
	border: 10px solid #ff0000;
	border-color: transparent #ff0000 #ff0000 transparent;
	content: '';
}

.em-todo-active:before {
	position: absolute;
	right: -6px;
	bottom: -10px;
	font-size: 24px;
	color: #fff;
	z-index: 10;
}


/*按钮组*/

.em-button-wrapper {
	display: flex;
	align-items: center;
	/*margin-top: 20px;*/
	height: 44px;
}

.em-button-wrapper button {
	width: 50%;
	height: 44px;
	font-size: 16px;
	text-align: center;
	border-radius: 0px;
}

.em-button-left input[type='button'],
.em-button-left.mui-btn {
	border: 1px solid #fff;
	border-top: 1px solid #e1e1e1;
	background-color: #fff;
	color: #333333;
}

.em-button-left input[type='button'],
.em-button-left.mui-btn:enabled:active {
	background-color: #f5f5f5;
	border: 1px solid #f5f5f5;
	color: #333333;
}

.em-button-right input[type='button'],
.em-button-right.mui-btn {
	border: 1px solid #3c80e6;
	background-color: #3c80e6;
	color: #ffffff;
}

.em-button-right input[type='button'],
.em-button-right.mui-btn:enabled:active {
	background-color: #3752e6;
	border: 1px solid #3752e6;
}

.search .mui-scroll-wrapper {
    overflow: scroll;
}