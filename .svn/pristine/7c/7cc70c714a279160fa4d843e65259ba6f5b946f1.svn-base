body,
html {
    background-color: #f5f5f5;
}

.feed-title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 10px;
    margin-bottom: 10px;
    background-color: #fff;
}

.feed-text {
    font-size: 17px;
    color: #000000;
}

.feed-grey {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #666;
}

.feed-grey .text-blue {
    font-size: 33px;
    padding-right: 10px;
}

.checkbox {
    padding: 10px 10px 0;
}

.addcheck {
    width: 100%;
    height: 40px;
    background-color: #3c80e6;
    border: none;
    color: #fff;
    border-radius: 4px;
}

/* 检查项列表 */
.checklist {
    padding-top: 10px;
}

.checklist li {
    display: flex;
    align-items: center;
    padding: 10px 0;
    font-size: 15px;
    color: #333;
}

.checklist li:not(:last-child) {
    border-bottom: 1px solid #d3d3d3;
}

.checklist div {
    text-align: center;
}

.checktitle {
    background-color: #f5f5f5;
}

.flex-1 {
    flex: 1;
}

.flex-2 {
    flex: 2;
}

.text-blue {
    color: #3c80e6;
}

/* 底部按钮 */
.base-btn {
    position: fixed;
    bottom: 0;
    padding: 10px;
    display: flex;
    width: 100%;
    background-color: #f5f5f5;
    z-index: 10;
}

.base-btn div {
    height: 40px;
    line-height: 40px;
    text-align: center;
    width: calc(50% - 5px);
    border-radius: 4px;
    font-size: 14px;
}

.base-btn div:nth-child(1) {
    margin-right: 10px;
    background-color: #fff;
    color: #3c80e6;
}

.base-btn div:nth-child(2) {
    background-color: #3c80e6;
    color: #fff;
}