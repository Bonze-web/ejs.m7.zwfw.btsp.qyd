.line-height50 {
	line-height: 50px;
}

textarea {
	padding: 4px 0 10px 0;
	font-size: 15px;
	border: 0;
}

.flex {
	display: flex;
	align-items: center;
}

.borderbt {
	border-bottom: 1px solid #c8c7cc;
}


/*监管行为title*/

.action-item-title {
	width: 100%;
	height: 80px;
	line-height: 40px;
	padding: 0 15px;
	background: #fafafa;
}


/*查看检查内容*/

.look-checkcont {
	font-size: 15px;
	color: #3c80e6;
	line-height: 15px;
}

.action .unit-item:nth-child(1){
	margin-top: 5px;
}

.action-item-cont {
	width: 100%;
	padding: 12px 0;
}


/*检查结果*/

.action-item-chooseitem {
	display: inline-block;
	width: 20%;
	color: #3c80e6;
	background: #f3f8ff;
	border-radius: 25px;
	font-size: 14px;
	text-align: center;
}

.sel-active {
	background: #3c80e6;
	color: #fff;
}

.action-item-chooseitem:nth-child(1),
.action-item-chooseitem:nth-child(3) {
	margin: 0 3.4%;
}


/*操作按钮*/

.operation button:nth-child(1) {
	width: 100%;
	background: #3c80e6;
	color: #fff;
}

.operation button:nth-child(2) {
	background: #69a5ff;
}

.check-info-title {
	position: relative;
	background: #fff;
	height: 44px;
	line-height: 30px;
	padding: 7px 10px 7px 0;
	color: #666666;
	font-size: 14px;
	font-weight: bold;
	text-align: left;
	text-indent: 10px;
}

.check-info-title::before {
    position: absolute;
    top: 14px;
    bottom: 14px;
    left: 0;
    width: 4px;
    content: '';
    background-color: #3c80e6;
}

.check-info-cont {
	color: #000;
	font-size: 16px;
	text-align: left;
}

/*icon-添加附件*/
.icon-attach {
	display: inline-block;
	width: 15px;
	height: 17px;
	position: absolute;
	right: 15px;
	top: 13px;
	background-image: url(../img/img_icon_attach.png);
	background-repeat: no-repeat;
	background-size: cover;
}

.action-item-res .unit-item-left {
	width: 85px;
}

.action-item-res .unit-item-right {
	width: calc(100% - 85px);
}

/*附件列表*/

.em-transition-vertical {
	overflow: hidden;
	height: 0px;
	transition: height 150ms linear;
	-webkit-transition-duration: height 150ms linear;
	-moz-transition: height 150ms linear;
	-o-transition-property: height 150ms linear;
}

.em-attach-wrapper.mui-table-view-cell {
	position: relative;
	overflow: hidden;
	padding: 0px 0px;
	-webkit-touch-callout: none;
	display: flex;
	align-items: center;
	background-color: #fafafa;
}

.em-attach-view.mui-table-view:before,
.em-attach-view.mui-table-view:after,
.em-attach-view .mui-table-view-cell:before,
.em-attach-view .mui-table-view-cell:after {
	height: 0px;
}

.em-attach-wrapper .mui-slider-indicator.mui-segmented-control {
	position: relative;
	bottom: auto;
	height: 105px;
}

.em-attach-view .mui-table-view-cell {
	float: left;
	display: block;
	text-align: center;
}

.em-attach-view .mui-table-view-cell img {
	width: 30px;
	height: 30;
	vertical-align: middle;
}

.em-attach-view .mui-table-view-cell .em-attach-name {
	display: block;
	font-size: 13px;
	color: #666666;
	width: 120px;
	margin-top: 10px;
}

.em-attach-view .mui-table-view-cell .em-attach-size {
	display: block;
	font-size: 12px;
	color: #999999;
}

.em-form-content {
    width: calc(100vw - 145px);
    margin-left: 15px;
}

.em-attach-tips {
	font-size: 14px;
    color: #666666;
}

.em-attach-count {
    color: #3c80e6;
}

.em-form-icon {
    float: right;
    width: 25px;
    text-align: right;
    color: #3c80e6;
}

.mui-icon.mui-icon-paperclip {
    transform-style: preserve-3d;
    transform: rotateZ(225deg) rotateX(180deg);
    -webkit-transform: rotateZ(225deg) rotateX(180deg);
    color: #3c80e6;
}


/*附件上传进度条加载*/

body>.mui-progressbar {
	position: absolute;
	z-index: 10000;
	top: 0px;
	left: 0;
	border-radius: 0;
	background: #f5f5f5;
}

.mui-progressbar span {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	-webkit-transition: 150ms;
	transition: 150ms;
	-webkit-transform: translate3d(-100%, 0, 0);
	transform: translate3d(-100%, 0, 0);
	background: #3c80e6;
}

.em-btnbox {
	margin-top: 10px;
}

.em-btn {
	margin-right: 8px;
    padding: 6px 40px;
    font-size: 13px;
    color: #3c80e6;
    border: 1px solid #a2c2f3;
    border-radius: 16px;
    background: #f4f8ff;
}

.em-btn.em-active {
    color: #FFFFFF;
    background: #3C80E6;
}

.em-save {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 40px;
	border-radius: 0;
}