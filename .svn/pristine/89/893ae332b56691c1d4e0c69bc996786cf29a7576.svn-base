.clearfix::after {
    clear: both;
    content: "";
    height: 0;
    visibility: hidden;
    display: block;
    /* overflow: hidden; */
}
.clearfix{
    *zoom: 1;
}
.opinion {
    background-color: #fff;
    padding-bottom: 12px;
}

.opinion textarea {
    border: 0;
}

.add_template {
    margin: 0 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ecf4ff;
    border-radius: 6px;
    padding: 10px 0;
    color: #6a9eed;
}

.add_template .wait_add {
    width: 12px;
    height: 12px;
    margin-right: 5px;
}
input::-webkit-input-placeholder {
    color: #dcdcdc;
}

.views_template {
    background-color: #fff;
}
.views_template_box {
    font-size: 16px;
    padding: 0 10px;
    margin-top: 8px;
    border-bottom: 1px solid #f2f2f2;
}
.views_template_box .public,
.views_template_box .personal {
    position: relative;
    float: left;
    padding: 15px 0;
}
.active {
    color: #3c80e6;
}
.active::before {
    position: absolute;
    content: "";
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    height: 2px;
    width: 40px;
    background-color: #3c80e6;
}
.views_template_box .public {
    margin-right: 22px;
}
.views_template_box .wait_board_add {
    float: right;
    padding: 15px 0;
}

.suggestion_list {
    display: flex;
    align-items: center;
    padding: 10px 10px;
    border-bottom: 1px solid #f2f2f2;
}
.suggestion_list .wait_circle_box{
    margin-right: 6px;
}
.suggestion_list span {
    font-size: 14px;
}