.upload .r {
	font-size: 12px;
	color: #007aff;
}

/* 附件 */

.has {
    width: 100%;
    overflow-x: auto;
    height: auto;
    background-color: #fff;
}

.hassel {
    height: auto;
    padding: 10px;
    padding-top: 20px;
    min-width: 320px;
    white-space: nowrap
}

.hassel-item {
    position: relative;
    width: auto;
    height: auto;
    margin-right: 10px;
    display: inline-block;
}

.del {
    position: absolute;
    width: 20px;
    height: 20px;
    position: absolute;
    top: -10px;
    right: 0px;
}

.del img {
    width: 100%;
}

.file {
    text-align: center
}

.img {
    width: 40px;
    text-align: center;
    margin-left: 15px;
}

.img img {
    text-align: center;
    width: 100%;
}

.filename {
    text-align: center;
    font-size: 12px;
    width: 70px;
    margin: 0;
    word-break: normal;
    word-wrap: break-word;
    line-height: 14px;
}

.showimg img {
	width: 100%;
}
