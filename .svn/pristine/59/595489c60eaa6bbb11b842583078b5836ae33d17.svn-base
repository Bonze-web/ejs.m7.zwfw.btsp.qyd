html,
body,
.mui-content {
	background: #FFFFFF;
}
/*
 * tab切换
 */
.em-tab-list{
	position: fixed;
	top: 0;
	width: 100%;
	height: 40px;
	font-size: 15px;
	line-height: 40px;
	text-align: center;
	background-color: #fff;
	color: #3c80e6;
	z-index: 10;
}

.em-tab-list li{
	float:left;
	width: 25%;
	border-bottom: 2px solid transparent;
}

.em-tab-list li.em-active{
	border-bottom: 2px solid #3c80e6;
}

#minirefresh {
	margin-top: 42px;
}

/*列表内容*/
.flex {
	display: flex;
	align-items: flex-start;
}

.flexb {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

#listdata li {
	padding: 20px 15px 12px 15px;
}

.em-title {
	width: calc(100% - 46px);
	font-size: 17px;
	color: #000000;	
}

.em-status {
	width: 38px;
	padding: 1px 7px;
	font-size: 12px;
	color: #FFFFFF;
	background: #4db169;
	border-radius: 4px;
	margin-right: 8px;
}

.em-con {
	margin: 10px 0;
	font-size: 14px;
	color: #8c8c8c;
}

.em-conl {
	width: 90px;
}

.em-conr {
	width: calc(100% - 90px);
	white-space:normal;
	word-break:break-all;
	word-wrap:break-word; 
}

.em-botbox {
	border-top: 1px solid #e5e5e5;
}

.em-botcon {
	font-size: 14px;
	line-height: 35px;
	color: #9eafc7;
}
