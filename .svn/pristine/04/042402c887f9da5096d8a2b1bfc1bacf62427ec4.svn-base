(function (d, $) {
    'use strict';

    var rowGuid = '',
        userGuid = '';

    Util.loadJs(
        // 下拉刷新
        'js/widgets/tabview/tabview.js',
        function () {
            ejs.config({
                jsApiList: []
            });

            ejs.ready(function () {
                rowGuid = Util.getExtraDataByKey('rowguid') || '111';
                userGuid = Util.getExtraDataByKey('userguid');
                initPage()
            });
        }
    );

    // 初始化页面信息
    function initPage() {
        // 初始化事件监听
        initListeners();

        new TabView({
            container: "#em-tabview-con",
            activeCls: "cur",
            isSwipe: false,
            activeIndex: 0,
            triggerEvent: 'tap',
            itemClick: function (e) {}
        });

        getDetail();
    }

    /**
     * 初始化事件监听
     */
    function initListeners() {
        $('body').on('tap', '.operationbtn', function (event) {

            var optName = $(this).text();

            if (optName == '移交') {
                ejs.page.open("./dailycheck_yijiao.html", {
                    guid: rowGuid
                });
            } else if (optName == '接受') {
                ejs.ui.confirm({
                    title: "确认",
                    message: "确认接收",
                    buttonLabels: ['取消', '确定'],
                    cancelable: 1,
                    h5UI: false, // 是否强制使用H5-UI效果，默认false
                    success: function (result) {
                        // 点击任意一个按钮都会回调
                        if (result.which == 1) {
                            getItem(rowGuid);
                        }
                    },
                    error: function (err) {}
                });
            }
        })
    }

    //接受检查
    function getItem(guid) {
        Util.ajax({
            url: Config.serverUrl + 'task/updateTask',
            data: JSON.stringify({
                token: 'Epoint_WebSerivce_**##0601',
                params: {
                    dutyguid: guid,
                    status: '40',
                    userguid: userGuid
                }
            }),
            headers: {
                'Content-Type': 'application/json'
            },
            success: function (res) {
                console.log(res);
                if (res.status.code != 200) {
                    ejs.ui.toast('获取数据失败');
                    return;
                }

            },
            error: function (err) {
                ejs.ui.toast(err);
            }
        });
    }

    function getDetail() {
        Util.ajax({
            url: Config.serverUrl + 'task/getTaskDetail',
            data: JSON.stringify({
                token: 'Epoint_WebSerivce_**##0601',
                params: {
                    dutyguid: rowGuid
                }
            }),
            headers: {
                'Content-Type': 'application/json'
            },
            success: function (res) {
                console.log(res);
                if (res.status.code != 200) {
                    ejs.ui.toast('获取数据失败');
                    return;
                }

                var handleJson = res.custom;

                console.log($('#detail-con').find('.itemvalue'))

                $('#detail-con').find('.itemvalue').each(function (key, value) {

                    var thisId = $(this).attr('id');

                    $(this).text(handleJson[thisId])
                })

            },
            error: function (err) {
                ejs.ui.toast(err)
            }
        });
    }

})(document, Zepto);