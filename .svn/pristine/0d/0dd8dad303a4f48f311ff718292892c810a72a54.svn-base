.main-right-title {
	/*display: flex;*/
	color: #333;
	font-size: 16px;
	padding: 10px 15px;
	margin-bottom: 5px;
	background: #fafafa;
}

.main-right-title>label {
	display: inline-block;
	width: 75px;
}

.main-right-title>span {
	display: inline-block;
	width: calc(100% - 75px);
}

.main-right-list {
	padding: 5px 15px 0 15px;
	color: #666;
	font-size: 15px;
}

.main-right-list>label {
	position: relative;
	z-index: 1;
	display: inline-block;
	width: 90px;
	text-justify: distribute-all-lines;
	text-align-last: justify;
}

.main-right-list>label:after {
	position: absolute;
	z-index: 1;
	content: ':';
	font-size: 16px;
	color: #666;
	top: -2px;
}

.main-right-list>span {
	display: inline-block;
	width: calc(100% - 96px);
	color: #333;
}