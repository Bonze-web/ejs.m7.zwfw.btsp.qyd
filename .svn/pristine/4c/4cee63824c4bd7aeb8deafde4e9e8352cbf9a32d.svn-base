body,
html {
    background-color: #f5f5f5;
}

.daily-tab {
    padding: 0 10px;
    background-color: #fff;
    display: flex;
    width: 100%;
    height: 44px;
}

.daily-tab div {
    flex: 1;
    height: 44px;
    line-height: 44px;
    font-size: 14px;
    text-align: center;
}

.daily-tab .active {
    position: relative;
    color: #3c80e6;
}

.daily-tab .active:after {
    position: absolute;
    content: '';
    width: 40px;
    height: 2px;
    bottom: 0;
    left: calc(50% - 20px);
    background-color: #3c80e6;
}

.checklist {
    background-color: #f5f5f5;
}

.checklist li {
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
}

.checklist-title {
    font-size: 18px;
}

.checklist-content {
    margin: 10px 0;
    padding-left: 10px;
    color: #666666;
    font-size: 14px;
}

.checklist-opbtn {
    display: flex;
}

.checklist-opbtn div {
    width: calc(50% - 10px);
    height: 34px;
    line-height: 34px;
    text-align: center;
    background-color: #ecf4ff;
    color: #4285f4;
    font-size: 14px;
}

.checklist-opbtn div:nth-child(1) {
    margin-right: 10px;
}

.checklist-overtime .checklist-content {
    border-left: 2px solid #f53555;
}

.checklist-overtime .datetips {
    color: #f53555;
}

.checklist-resttime .checklist-content {
    border-left: 2px solid #ffb923;
}

.checklist-resttime .datetips {
    color: #ffb923;
}

.checklist-oponebtn {
    height: 34px;
    line-height: 34px;
    text-align: center;
    width: 100%;
    background-color: #ecf4ff;
    color: #4285f4;
    font-size: 14px;
    border: 1px solid #4285f4;
}