/* 今日已记 */
.present {
    /* margin-top: 8px; */
    background-color: #fff;
    padding: 0 15px;
    padding-top: 27px;
}
.home_btn_more {
    width: 21px;
    height: 21px;
}
.present_title_box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 18px;
}
.present_msg_box .present_title{
    color: #333333;
    font-size: 18px;
}
.present_msg_box .present_content {
    color: #9d9d9d;
    font-size: 12px;
}
.service_box {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.service_item {
    flex: 0 0 48%;
    /* flex: 1; */
    border: #f2f2f2 1px solid;
    border-radius: 3px;
    display: flex;
    justify-content: space-between;
    padding: 8px;
    margin-bottom: 10px;
}
/* .service_item:nth-of-type(2n-1) {
    margin-right: 12px;
} */
.service_item .item {
    display: flex;
    align-items: center;
}
.service_item .item img {
    width: 21px;
    height: 21px;
}
.home_icon_add {
    width: 20px;
    height: 20px;
}