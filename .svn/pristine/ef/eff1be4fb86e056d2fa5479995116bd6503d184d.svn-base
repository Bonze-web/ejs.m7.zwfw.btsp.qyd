.page_bg {
    background-color: #fff;
}
.early_warning {
    padding: 23px 10px;
}
.early_warning .remind {
    font-size: 21px;
    color: #333333;
    line-height: 30px;
    font-weight: bold;
}
.early_warning .time {
    color: #666666;
    font-size: 12px;
    /* padding-top: 12px; */
}
.hint {
    padding: 12px 10px 20px;
    line-height: 23px;
}
.personal_information {
    padding-bottom: 17px;
    /* padding: 0 10px; */
    /* box-sizing: border-box; */
}
.personal_msg_box {
    position: relative;
    margin: 0 10px;
    height: 67px;
    margin-top: 10px;
}
.personal_msg_box img {
    position: absolute;
    width: 100%;
    height: 67px;
    display: block;
}
.personal_title_box {
    position: absolute;
    /* width: 100%; */
    height: 37px;
    left: 55px;
    top: 14px;
    font-size: 16px;
    color: #fff;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.personal_hint_box {
    position: absolute;
    left: 55px;
    top: 40px;
    font-size: 12px;
    color: #fff;
    /* width: 100%; */
    height: 37px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.retroaction {
    padding: 0 10px;
    height: 45px;
    line-height: 45px;
    color: #727272;
    font-size: 15px;
    background-color: #f5f5f5;
}
.retroaction_content {
    padding: 12px 10px 15px;
    line-height: 25px;
    color: #727272;
    background-color: #fff;
}
.retroaction_content .time {
    font-size: 15px;
    margin-top: 10px;
}



/* 保存 */
.em-save {
    position: fixed;
    bottom: 0;
    z-index: 5;
    width: 100%;
    height: 44px;
    padding: 0;
    margin-top: 10px;
    font-size: 17px;
    line-height: 44px;
    color: #3c80e6;
    background-color: #fff;
    border: none;
}

.information_table {
    margin: 0 auto;
    width: 90%;
}
.information_table td {
    padding: 10px;
    border: 1px solid #ccc;
}