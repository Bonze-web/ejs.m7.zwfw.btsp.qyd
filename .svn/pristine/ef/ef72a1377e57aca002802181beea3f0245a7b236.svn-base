body,html {
    background-color: #f5f5f5;
}
.detail-status {
    background: linear-gradient(to right, #58ce79, #4db169);
    height: 44px;
    line-height: 44px;
    color: #fff;
    text-align: center;
    font-size: 14px;
}

.cur {
    position: relative;
    color: #3c80e6;
}
.cur:after {
    position: absolute;
    content: '';
    bottom: 0;
    left: calc(50% - 20px);
    width: 40px;
    height: 2px;
    background-color: #3c80e6;
}
.em-tabview {
    overflow: hidden;
}

.em-tabview-title {
    width: 33.3%;
    height: 40px;
    line-height: 40px;
    text-align: center;
}

.em-tabview-head {
    display: flex;
    background-color: #fcfcfc;
    font-size: 14px;
}

.em-tabview-body {
    display: flex;
    width: 300%;
    height: 100%;
    overflow: hidden;
    -webkit-transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
}

.em-tabview-body ul {
    width: 100%;
}
.detail-container {
    padding-left: 10px;
    background-color: #fff;
}
.detail-line {
    padding: 0 10px 0 0 ;
    display: flex;
    width: 100%;
    height: 44px;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    border-bottom: 1px solid #e6e6e6;
}
.detail-line span:nth-child(1) {
    color: #666;
}

.detail-file {
    padding: 0 10px;
    background-color: #fff;
}
.file-title {
    height: 40px;
    line-height: 40px;
    color: #666;
}
.file-info {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #fafafa;
    border-radius: 4px;
    border: 1px solid #e5e5e5;
}
.file-info-icon {
    background: url('./images/img-wordicon.png');
    background-size: 100% 100%;
    width: 32px;
    height: 32px;
}
.file-info-name {
    margin-left: 10px;
    width: calc(100% - 70px);
    font-size: 14px;
}
.file-info-name div:nth-child(2) {
    color: #666;
}
.file-info-downloadicon {
    background: url('./images/img-downloadicon.png');
    background-size: 100% 100%;
    width: 22px;
    height: 19px;
}
.base-btn {
    padding: 10px;
    display: flex;
    width: 100%;
}
.base-btn div {
    height: 40px;
    line-height: 40px;
    text-align: center;
    width: calc(50% - 5px);
    border-radius: 4px;
    font-size: 14px;
}
.base-btn div:nth-child(1) {
    margin-right: 10px;
    background-color: #fff;
    color: #3c80e6;
}
.base-btn div:nth-child(2) {
    background-color: #3c80e6;
    color: #fff;
}

/*检查结果*/
.checkresult {
    background-color: #fff;
}
.checkresult li {
    position: relative;
    padding: 20px 10px;
    border-bottom: 1px solid #e6e6e6;
}
.checkresult li .mui-icon-arrowright{
    position: absolute;
    top: 20px;
    right: 10px;
    font-size: 14px;
}
.pass {
    margin-left: 4px;
    padding-left: 18px;
    position: relative;
}
.pass:before {
    position: absolute;
    content: '';
    left: 0;
    top: 0;
    background: url('./images/img-passicon.png');
    background-size: 100% 100%;
    width: 16px;
    height: 15px;
}
.checkresult-content {
    margin-top: 10px;
    padding-left: 10px;
    color: #666;
    border-left: 2px solid #cedbef;
    font-size: 14px;
}
.coloro {
    color: #ff6c00;
}

/*审核信息*/
.verify-line {
    padding: 0 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 40px;
    background-color: #fff;
    background-color: 1px solid #e6e6e6;
    font-size: 14px;
}
.verify-line span:nth-child(1) {
    color: #666;
}