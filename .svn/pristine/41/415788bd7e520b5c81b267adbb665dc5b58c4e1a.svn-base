.breakfast {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 12px;
    background-color: #fff;
}
.breakfast::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    background-color: #f3f3f3;
    width: 90%;
    height: 1px;
}
.breakfast .breakfast_title {
    padding-left: 10px;
    position: relative;
    font-size: 16px;
    font-weight: bold;
    /* border-bottom: #f3f3f3 1px solid; */
}
.breakfast .breakfast_title::before {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    content: '';
    width: 4px;
    height: 14px;
    background-color: #3c80e6;
}
.breakfast .more {
    width: 7px;
    height: 10px;
}
.breakfast .more img {
    width: 100%;
    height: 100%;
    display: block;
}

.breakfast_detailed {
    background-color: #fff;
    padding: 16px 12px;
}
.breakfast_detailed_time {
    display: flex;
    font-size: 15px;
    color: #333333;
    font-weight: bold;
}
.breakfast_detailed_time li:first-of-type {
    margin-right: 12px;
}
.breakfast_detailed_list {
    display: flex;
    flex-wrap: wrap;
}
.breakfast_detailed_list li {
    padding: 9px 13px;
    background-color: #f5f5f5;
    margin-right: 7px;
    margin-top: 14px;
    color: #666;
    font-size: 14px;
}
.lunch {
    margin-top: 9px;
}
.dinner {
    margin-top: 9px;
}

.em-item {
    height: 32px;
    padding: 0 8px;
    margin-right: 8px;
    margin-bottom: 5px;
    font-size: 14px;
    color: #666;
    line-height: 32px;
    background-color: #f5f5f5;
    border-radius: 2px;
}

.em-handler {
    margin-left: 10px;
}
