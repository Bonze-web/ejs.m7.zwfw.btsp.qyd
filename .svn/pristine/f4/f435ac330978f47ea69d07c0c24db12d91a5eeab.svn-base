.time_axis {
    position: absolute;
    left: 77px;
    top: 34px;
    width: 18px;
    text-align: center;
}
.time_axis .axis_box:first-of-type {
    margin: 0;
}
.axis_box {
    position: relative;
    margin-top: 58px;
}
.axis_box::before {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 17px;
    height: 73px;
    width: 1px;
    background-color: #f3f3f3;
}
.axis_box:last-of-type:before {
    display: none;
}

/* 风险等级说明 */

.illustrate {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
}
.instruction {
    position: absolute;
    top: 154px;
    left: 50%;
    transform: translateX(-50%);
    width: 285px;
    height: 250px;
    border-radius: 10px;
    background-color: #fff;
}
.instruction_title {
    margin-top: 30px;
    text-align: center;
    font-size: 19px;
    font-weight: 600;
}
.instruction_content {
    margin-top: 36px;
}
.instruction_content_list {
    margin-top: 15px;
    padding-left: 47px;
    padding-right: 32px;
    font-size: 15px;
}
.instruction_content_list span:first-of-type {
    color: #6c6c6c;
}
.instruction_content_list span:nth-of-type(2) {
    color: #6c6c6c;
}
.instruction_content_list span:nth-of-type(4) {
    float: right;
    width: 26px;
    height: 22px;
    background-color: #31cfd9;
    color: #fff;
    padding: 2px 6px;
    margin-right: 6px;
}
.instruction_content_list span:nth-of-type(3) {
    float: right;

    color: #353535;
    font-weight: 600;
}

.instruction .instruction_content_list .rank_b {
    background-color: #65c400;
}
.instruction .instruction_content_list .rank_c {
    background-color: #ff6c00;
}
.instruction .instruction_content_list .rank_d {
    background-color: #e81e1e;
}

.delete_box {
    position: absolute;
    right: 11px;
    top: 11px;
    width: 15px;
    height: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.delete_box .delete {
    width: 10px;
    height: 10px;
}