.risk_grade {
    position: relative;
    width: 100vw;
    height: 100vh;
    background-color: #f5f5f5;
    box-sizing: border-box;
    padding: 10px 10px 0;
}
.risk_grade .grade_show {
    position: relative;
}
.risk_grade .grade_show .riskgrade_bg_ris {
    width: 100%;
}

.risk_grade .grade_show .explain {
    position: absolute;
    right: 12px;
    top: 15px;
    color: #fff;
    font-size: 12px;
    font-family: SourceHanSansCN;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 16px;
}

.risk_grade .grade_show .estate {
    position: absolute;
    left: 50%;
    top: 50px;
    transform: translateX(-50%);
    width: 126px;
    height: 117px;
    text-align: center;
}
.risk_grade .estate span {
    position: absolute;
    /* width: 100%; */
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    color: #fff;
    font-size: 11px;
}
.renovate {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 14px;
    display: flex;
    font-size: 11px;
    color: #fff;
}
.renovate .circle {
    background-color: rgba(61, 122, 219,0.8);
    padding: 0 5px;
    margin-right: 10px;
}

/* 等级列表 */
.risk_grade_list {
    position: relative;
    background-color: #fff;
    border-radius: 5px;
}
.grade_list_box {
    display: flex;
}
.grade_list_box .list_box_one {
    padding: 27px 22px 15px 22px;
}
.grade_list_box .list_box_one .year {
    font-size: 14px;
    font: bold;
    color: #434343;
}
.grade_list_box .list_box_one .month {
    font-size: 11px;
    color: #a1a1a1;
}
.grade_list_box .level_risk {
    font-size: 14px;
    font: bold;
    color: #434343;
    display: flex;
    align-items: center;
    margin-left: 32px;
    flex: 1;
}
.grade_list_box .level_risk span {
    display: inline-block;
    background-color: #31cfd9;
    color: #fff;
    padding: 2px 8px;
    border-radius: 2px;
}
.grade_list_box .level_risk span[status="A"] {
    background-color: #31cfd9;
}
.grade_list_box .level_risk span[status="B"] {
    background-color: #ff6c00;
}
.grade_list_box .level_risk span[status="C"] {
    background-color: #65c400;
}
.grade_list_box .level_risk span[status="D"] {
    background-color: #e81e1e;
}
.grade_list_box .adjustment {
    display: flex;
    align-items: center;
    color: #999999;
    font-size: 14px;
    padding: 0 12px;
}
.grade_list_box .adjustment .riskgrade_icon_upgrey,
.grade_list_box .adjustment .riskgrade_icon_downgrey {
    margin-right: 3px;
    display: none;
}

.grade_list_box .adjustment .riskgrade_icon_upgrey[status="2"] {
    display: block;
}
.grade_list_box .adjustment .riskgrade_icon_downgrey[status="3"] {
    display: block;
}
